{
  "mcpServers": {
    "lsp-typescript": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "--bun",
        "git+https://github.com/jonrad/lsp-mcp",
        "--lsp",
        "typescript-language-server --stdio"
      ]
    },
    "lsp-css": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "--bun",
        "git+https://github.com/jonrad/lsp-mcp",
        "--lsp",
        "vscode-css-languageserver --stdio"
      ]
    },
    "lsp-json": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "--bun",
        "git+https://github.com/jonrad/lsp-mcp",
        "--lsp",
        "vscode-json-languageserver --stdio"
      ]
    },
    "vercel": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.vercel.com"
      ],
      "env": {}
    },
    "supabase-local": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "http://127.0.0.1:55321/mcp"
      ],
      "env": {}
    }
  }
}
